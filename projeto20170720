			 A2=txtA2->Text;
			 B1=txtB1->Text;
			 B2=txtB2->Text;
			 a1=System::Convert::ToInt64(A1);
			 a2=System::Convert::ToInt64(A2);
			 b1=System::Convert::ToInt64(B1);
			 b2=System::Convert::ToInt64(B2);
			 den=(a2*b1)/mdc(a1*b2, a2*b1);
			 num=(a1*b2)/mdc(a1*b2, a2*b1);
			 DEN=System::Convert::ToString(den);
			 denominadorQuociente->Text=DEN;
			 NUM=System::Convert::ToString(num);
			 numeradorQuociente->Text=NUM;
		 }

private: System::Void textBox1_TextChanged(System::Object^  sender, System::EventArgs^  e) {

		 }
int mdc (int a, int b){
    if (a==b || b==0){
        return a;
    }
    else if (a==0){
        return b;
    }
    else if (a%2==0 && b%2!=0){
        return mdc (a/2, b);
    }
    else if (a%2!=0 && b%2==0){
        return mdc (a, b/2);
    }
    else if (a%2==0 && b%2==0){
        return (2*mdc (a/2, b/2));
    }
    else if (a>b){
        return (mdc (((a-b)/2), b));
    }
    else
        return (mdc (((b-a)/2), a));
}
private: System::Void button1_Click(System::Object^  sender, System::EventArgs^  e) {
			 int a1, b1, a2, b2, num, den;
			 String^ A1, ^A2, ^B1, ^B2, ^NUM, ^DEN;
			 A1=txtA1->Text;
			 A2=txtA2->Text;
			 B1=txtB1->Text;
			 B2=txtB2->Text;
			 a1=System::Convert::ToInt64(A1);
			 a2=System::Convert::ToInt64(A2);
			 b1=System::Convert::ToInt64(B1);
			 b2=System::Convert::ToInt64(B2);
			 den=(a2*b2)/mdc(a2, b2);
			 num=((den/a2)*a1)+((den/b2)*b1);
			 DEN=System::Convert::ToString(den);
			 denominadorSoma->Text=DEN;
			 NUM=System::Convert::ToString(num);
			 numeradorSoma->Text=NUM;
		 }

private: System::Void Form1_Load(System::Object^  sender, System::EventArgs^  e) {
		 }

private: System::Void button2_Click(System::Object^  sender, System::EventArgs^  e) {
			 int a1, b1, a2, b2, num, den;
			 String^ A1, ^A2, ^B1, ^B2, ^NUM, ^DEN;
			 A1=txtA1->Text;
			 A2=txtA2->Text;
			 B1=txtB1->Text;
			 B2=txtB2->Text;
			 a1=System::Convert::ToInt64(A1);
			 a2=System::Convert::ToInt64(A2);
			 b1=System::Convert::ToInt64(B1);
			 b2=System::Convert::ToInt64(B2);
			 den=(a2*b2)/mdc(a2, b2);
			 num=((den/a2)*a1)-((den/b2)*b1);
			 DEN=System::Convert::ToString(den);
			 denominadorSubtracao->Text=DEN;
			 NUM=System::Convert::ToString(num);
			 numeradorSubtracao->Text=NUM;
		 }
private: System::Void button3_Click(System::Object^  sender, System::EventArgs^  e) {
			 int a1, b1, a2, b2, num, den;
			 String^ A1, ^A2, ^B1, ^B2, ^NUM, ^DEN;
			 A1=txtA1->Text;
			 A2=txtA2->Text;
			 B1=txtB1->Text;
			 B2=txtB2->Text;
			 a1=System::Convert::ToInt64(A1);
			 a2=System::Convert::ToInt64(A2);
			 b1=System::Convert::ToInt64(B1);
			 b2=System::Convert::ToInt64(B2);
			 den=(a2*b2)/mdc(a1*b1, a2*b2);
			 num=(a1*b1)/mdc(a1*b1, a2*b2);
			 DEN=System::Convert::ToString(den);
			 denominadorProduto->Text=DEN;
			 NUM=System::Convert::ToString(num);
			 numeradorProduto->Text=NUM;
		 }
private: System::Void button4_Click(System::Object^  sender, System::EventArgs^  e) {
			 int a1, b1, a2, b2, num, den;
